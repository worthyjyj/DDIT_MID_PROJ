<sqlMap namespace="freeboard">
	
	<!-- 전체 게시글 출력하기 -->
	<select id="getAllFreeBoard" resultClass="freeBoardVO">
	  select 
		   a.fb_no, a.fb_title, a.fb_content, a.fb_date, a.fb_hit, nvl(a.fb_reg,' ') as fb_reg, a.p_name, a.fb_pic, b.p_pic
		 from free_board a,  profile b 
		where a.p_name = b.p_name
		order by fb_date desc
		 
	</select>
	
	<!-- 조회수 순으로 전체 게시글 출력하기 -->
	<select id="OrderByHit" resultClass="freeBoardVO">
		select * from free_board order by fb_hit desc
	</select>
	
	<!-- 제목과 내용으로 통합검색 -->
	<select id="selectByTotal" parameterClass="Map" resultClass="freeBoardVO">
		select * from free_board 
		  where fb_title like '%'||#sword#||'%' or
		        fb_content like '%'||#sword#||'%' 
	</select>
	
